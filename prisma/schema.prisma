generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  role             Role      @default(USER)
  email            String?   @unique
  phone            String?   @unique
  password         String
  name             String
  avatar           String?
  bio              String?   
  location         String?   
  dateOfBirth      DateTime? 
  isVerified       Boolean   @default(false)
  isActive         Boolean   @default(true)
  lastSeen         DateTime?
  rating           Float?   
  reviewCount      Int       @default(0) 
  
  listings         Listing[]
  messagesSent     Message[] @relation("MessagesSent")
  messagesReceived Message[] @relation("MessagesReceived")
  otps             OTP[]
  favorites        Favorite[]
  verificationRequests VerificationRequest[] 
  verificationReviews VerificationRequest[] @relation("VerificationReviewer") 

  givenReviews     UserReview[] @relation("ReviewGiver") 
  receivedReviews  UserReview[] @relation("ReviewReceiver") 
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  slug     String    @unique
  icon     String?
  parentId Int?
  parent   Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children Category[] @relation("CategoryHierarchy")
  listings Listing[]
}

model Listing {
  id          Int           @id @default(autoincrement())
  title       String
  price       Float
  description String
  images      String[]     
  location    String
  latitude    Float?
  longitude   Float?
  status      ListingStatus @default(ACTIVE)
  categoryId  Int
  category    Category      @relation(fields: [categoryId], references: [id])
  userId      Int
  user        User          @relation(fields: [userId], references: [id])
  favorites   Favorite[]
  views       Int           @default(0)
  userReviews UserReview[] 
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([categoryId])
  @@index([location])
  @@index([price])
  @@index([status])
}

model Favorite {
  id        Int     @id @default(autoincrement())
  userId    Int
  listingId Int
  user      User    @relation(fields: [userId], references: [id])
  listing   Listing @relation(fields: [listingId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, listingId])
}

model Message {
  id         Int      @id @default(autoincrement())
  content    String
  isRead     Boolean  @default(false)
  senderId   Int
  receiverId Int
  listingId  Int?     
  sender     User     @relation("MessagesSent", fields: [senderId], references: [id])
  receiver   User     @relation("MessagesReceived", fields: [receiverId], references: [id])
  createdAt  DateTime @default(now())

  @@index([senderId, receiverId])
}

model OTP {
  id        Int      @id @default(autoincrement())
  code      String
  type      OtpType
  isUsed    Boolean  @default(false)
  expiresAt DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
model VerificationRequest {
  id               Int       @id @default(autoincrement())
  userId           Int
  documentType     DocumentType
  documentNumber   String
  documentImages   String[]
  status           VerificationStatus @default(PENDING)
  submittedAt      DateTime  @default(now())
  reviewedAt       DateTime?
  reviewedBy       Int?
  rejectionReason  String?
  
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewer         User?     @relation("VerificationReviewer", fields: [reviewedBy], references: [id])
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  
}

model UserReview {
  id           Int      @id @default(autoincrement())
  rating       Float    
  comment      String?
  giverId      Int
  receiverId   Int
  listingId    Int?   
  
  giver        User     @relation("ReviewGiver", fields: [giverId], references: [id], onDelete: Cascade)
  receiver     User     @relation("ReviewReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  listing      Listing? @relation(fields: [listingId], references: [id], onDelete: SetNull)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([giverId, receiverId, listingId]) 
}

enum DocumentType {
  ID_CARD
  PASSPORT
  DRIVERS_LICENSE
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  USER
  ADMIN
  MODERATOR
}

enum OtpType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

enum ListingStatus {
  ACTIVE
  SOLD
  PENDING
  EXPIRED
  BANNED
}