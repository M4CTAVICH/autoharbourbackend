generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  role             Role      @default(USER)
  email            String?   @unique
  phone            String?   @unique
  password         String
  name             String
  avatar           String?
  bio              String?   
  location         String?   
  dateOfBirth      DateTime? 
  isVerified       Boolean   @default(false)
  isActive         Boolean   @default(true)
  lastSeen         DateTime?
  rating           Float?   
  reviewCount      Int       @default(0) 
  
  listings         Listing[]
  messagesSent     Message[] @relation("MessagesSent")
  messagesReceived Message[] @relation("MessagesReceived")
  otps             OTP[]
  favorites        Favorite[]
  verificationRequests VerificationRequest[] 
  verificationReviews VerificationRequest[] @relation("VerificationReviewer") 

  givenReviews     UserReview[] @relation("ReviewGiver") 
  receivedReviews  UserReview[] @relation("ReviewReceiver") 
  savedSearches    SavedSearch[] 
  adminActions     AdminAction[]           @relation("AdminActions")
  reportsSubmitted Report[]                @relation("ReportsSubmitted")
  reportsReviewed  Report[]                @relation("ReportsReviewed")
  userBans         BanLog[]                @relation("UserBans")
  adminBans        BanLog[]                @relation("AdminBans")
  systemSettingsModified SystemSettings[]      @relation("SystemSettingsModifier")
  listingModerations    ListingModerationLog[] @relation("ListingModerations")
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  slug     String    @unique
  icon     String?
  parentId Int?
  parent   Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children Category[] @relation("CategoryHierarchy")
  listings Listing[]
}

model Listing {
  id          Int           @id @default(autoincrement())
  title       String
  price       Float
  description String
  images      String[]     
  location    String
  latitude    Float?
  longitude   Float?
  status      ListingStatus @default(ACTIVE)
  categoryId  Int
  category    Category      @relation(fields: [categoryId], references: [id])
  userId      Int
  user        User          @relation(fields: [userId], references: [id])
  favorites   Favorite[]
  views       Int           @default(0)
  userReviews UserReview[] 
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  moderationLogs ListingModerationLog[] @relation("ModerationLogs")


  @@index([categoryId])
  @@index([location])
  @@index([price])
  @@index([status])
}

model Favorite {
  id        Int     @id @default(autoincrement())
  userId    Int
  listingId Int
  user      User    @relation(fields: [userId], references: [id])
  listing   Listing @relation(fields: [listingId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, listingId])
}

model Message {
  id         Int      @id @default(autoincrement())
  content    String
  isRead     Boolean  @default(false)
  senderId   Int
  receiverId Int
  listingId  Int?     
  sender     User     @relation("MessagesSent", fields: [senderId], references: [id])
  receiver   User     @relation("MessagesReceived", fields: [receiverId], references: [id])
  createdAt  DateTime @default(now())

  @@index([senderId, receiverId])
}

model OTP {
  id        Int      @id @default(autoincrement())
  code      String
  type      OtpType
  isUsed    Boolean  @default(false)
  expiresAt DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
model VerificationRequest {
  id               Int       @id @default(autoincrement())
  userId           Int
  documentType     DocumentType
  documentNumber   String
  documentImages   String[]
  status           VerificationStatus @default(PENDING)
  submittedAt      DateTime  @default(now())
  reviewedAt       DateTime?
  reviewedBy       Int?
  rejectionReason  String?
  
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewer         User?     @relation("VerificationReviewer", fields: [reviewedBy], references: [id])
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  
}

model UserReview {
  id           Int      @id @default(autoincrement())
  rating       Float    
  comment      String?
  giverId      Int
  receiverId   Int
  listingId    Int?   
  
  giver        User     @relation("ReviewGiver", fields: [giverId], references: [id], onDelete: Cascade)
  receiver     User     @relation("ReviewReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  listing      Listing? @relation(fields: [listingId], references: [id], onDelete: SetNull)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([giverId, receiverId, listingId]) 
}
model SavedSearch {
  id            Int       @id @default(autoincrement())
  userId        Int
  name          String
  searchParams  String    
  alertEnabled  Boolean   @default(false)
  lastRun       DateTime?
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([userId])
}
model AdminAction {
  id          Int      @id @default(autoincrement())
  adminId     Int
  actionType  String   
  targetType  String?  
  targetId    Int?     
  details     Json?    
  ipAddress   String?
  userAgent   String?
  endpoint    String?  
  
  admin       User     @relation("AdminActions", fields: [adminId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  
  @@index([adminId])
  @@index([actionType])
  @@index([createdAt])
}

model Report {
  id          Int         @id @default(autoincrement())
  reporterId  Int
  targetType  ReportType  
  targetId    Int
  reason      String      
  description String?
  status      ReportStatus @default(PENDING)
  reviewedBy  Int?
  reviewedAt  DateTime?
  resolution  String?     
  
  reporter    User        @relation("ReportsSubmitted", fields: [reporterId], references: [id], onDelete: Cascade)
  reviewer    User?       @relation("ReportsReviewed", fields: [reviewedBy], references: [id], onDelete: SetNull)
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@index([reporterId])
  @@index([targetType, targetId])
  @@index([status])
  @@index([createdAt])
}

model BanLog {
  id          Int      @id @default(autoincrement())
  userId      Int
  adminId     Int
  action      BanAction 
  reason      String
  duration    Int?    
  expiresAt   DateTime?
  isActive    Boolean  @default(true)
  
  user        User     @relation("UserBans", fields: [userId], references: [id], onDelete: Cascade)
  admin       User     @relation("AdminBans", fields: [adminId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([adminId])
  @@index([isActive])
  @@index([expiresAt])
}

model SystemSettings {
  id                    Int      @id @default(autoincrement())
  key                   String   @unique
  value                 String
  description           String?
  category              String?  
  dataType              String   @default("string") // string, number, boolean, json
  isPublic              Boolean  @default(false)
  lastModifiedBy        Int?
  
  lastModifiedByAdmin   User?    @relation("SystemSettingsModifier", fields: [lastModifiedBy], references: [id], onDelete: SetNull)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([category])
  @@index([isPublic])
}

model ListingModerationLog {
  id          Int                @id @default(autoincrement())
  listingId   Int
  adminId     Int
  action      ModerationAction   
  reason      String?
  oldStatus   String?
  newStatus   String?
  notes       String?
  
  listing     Listing           @relation("ModerationLogs", fields: [listingId], references: [id], onDelete: Cascade)
  admin       User              @relation("ListingModerations", fields: [adminId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime          @default(now())
  
  @@index([listingId])
  @@index([adminId])
  @@index([action])
  @@index([createdAt])
}

// Add new enums
enum ReportType {
  USER
  LISTING
  MESSAGE
}

enum ReportStatus {
  PENDING
  UNDER_REVIEW
  RESOLVED
  DISMISSED
}

enum BanAction {
  BAN
  UNBAN
  TEMPORARY_BAN
  WARNING
}

enum ModerationAction {
  APPROVE
  REJECT
  FLAG
  FEATURE
  UNFLAG
  REMOVE_FEATURE
}

enum DocumentType {
  ID_CARD
  PASSPORT
  DRIVERS_LICENSE
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  USER
  ADMIN
  MODERATOR
  SUPER_ADMIN
}

enum OtpType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

enum ListingStatus {
  ACTIVE
  SOLD
  PENDING
  EXPIRED
  BANNED
}